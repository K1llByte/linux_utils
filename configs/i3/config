# Region Screenshot (also copies to clipboard)
bindsym Print exec FILENAME="$(date +%s).png" && maim -s ~/Pictures/Screenshots/$FILENAME && cat ~/Pictures/Screenshots/$FILENAME | xclip -selection clipboard -t image/png && unset FILENAME
# TODO: Remove this train later # $(date +%d/%m/%Y_%T:%3N)

# Screen Screenshot (also copies to clipboard)
bindsym Ctrl+Print exec FILENAME="$(date +%s).png" && maim ~/Pictures/Screenshots/$FILENAME && cat ~/Pictures/Screenshots/$FILENAME | xclip -selection clipboard -t image/png && unset FILENAME
# TODO: Remove this train later # $(date +%d/%m/%Y_%T:%3N)

############################### i3 Properties ################################

# window colors
#                       border              background         text                 indicator
# client.focused          $bg-color           $bg-color          $text-color          #ff0000
# client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color #ff0000
# client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color #ff0000
# client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #ff0000

# Remove edges and borders
new_window pixel 0
hide_edge_borders both

################################# Bar Config #################################

bar {
        i3bar_command i3bar -t 

        position top
        status_command i3blocks -c $HOME/.config/i3blocks/config
        colors {
                background $grey-transparent
                separator #757575
                #                  border                         background                     text
                focused_workspace  $grey-transparent              $grey-transparent              $yellow
                inactive_workspace $grey-transparent              $grey-transparent              #dddddd
                urgent_workspace   $urgent-bg-color               $urgent-bg-color               #000000
        }

        # Removes app icons in bar
        tray_output none
        mode hide
        hidden_state hide
        modifier $mod
        
        font pango:Droid Sans Mono 10, Font Awesome 5 Free 12
}

################################# Executes ###################################

# Set keyboard layout
exec setxkbmap -layout pt # TODO: remove this config later

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Execute compositor
exec_always compton

# Set Wallapper
exec_always feh --bg-fill ~/.config/i3/wallpaper

# Default workspaces for apps
assign [class="Chromium"] $ws2
assign [class="code-oss"] $ws3
assign [class="discord"] $ws10

# Floating window apps
for_window [class="vlc"] floating enable
for_window [class="obs"] floating enable
for_window [class="feh"] floating enable
for_window [class="feh"] resize set 1720 880
for_window [class="feh"] move position center

